{
   "area": {
      "menu_area": {
         "type": "choice",
         "header": [
            {
               "template": "Areas: ${store.areaStore.numberOfAreas}, Selected: ${store.areaStore.selected.name}, Rooms in Area: ${store.roomStore.rooms.length}",
               "needs": "hasSelectedArea"
            },
            {
               "template": "What would you like to do?"
            }
         ],
         "questions": [
            {
               "key": "create_area",
               "template": "Create new area"
            },
            {
               "key": "select_area",
               "template": "Select an area",
               "needs": "numberOfAreas"
            },
            {
               "key": "edit_area",
               "template": "Edit selected area metadata",
               "needs": "hasSelectedArea"
            },
            {
               "key": "menu_room",
               "template": "Create or edit rooms for selected area",
               "needs": "hasSelectedArea"
            },
            {
               "key": "delete_area",
               "template": "Delete selected area",
               "needs": "hasSelectedArea"
            },
            {
               "key": "save_area",
               "template": "Save selected area to YAML",
               "needs": "hasSelectedArea"
            },
            {
               "key": "save_all",
               "template": "Save all areas to YAML",
               "needs": "numberOfAreas"
            },
            {
               "key": "quit",
               "template": "Quit"
            }
         ]
      },
      "area_template": {
         "type": "form",
         "header": [
            {
               "template": "Create area"
            }
         ],
         "questions": [
            {
               "key": "area_name",
               "template": "Area name",
               "type": "input",
               "validate": "validateExists"
            },
            {
               "key": "respawn",
               "template": "Number of minutes to respawn",
               "type": "input",
               "default": 20,
               "validate": "validateNumber"
            },
            {
               "key": "instanced",
               "template": "Is this area instanced?",
               "type": "checkbox",
               "default": false
            }
         ]
      },
      "select_area": {
         "type": "choice",
         "header": [
            {
               "template": "Which area would you like to select?"
            }
         ],
         "questions": [
            {
               "key": "${area.name}",
               "template": "${area.name}"
            },
            {
               "key": "BACK",
               "template": "Back to area menu"
            }
         ]
      },
      "delete_area": {
         "type": "confirm",
         "header": [
            {
               "template": "Delete"
            }
         ],
         "message": "Are you sure you want to delete area '${store.areaStore.selected.name}'?"
      }
   },
   "room": {
      "menu_room": {
         "type": "choice",
         "header": [
            {
               "template": "${map}",
               "needs": "hasSelectedRoom"
            },
            {
               "template": "Number: ${store.roomStore.rooms.length}, Selected: ${store.roomStore.selected.name} at {${store.roomStore.selected.coordinates.string()}}",
               "needs": "hasSelectedRoom"
            },
            {
               "template": "What room function would you like to perform?"
            }
         ],
         "questions": [
            {
               "key": "create_room",
               "template": "Create new room"
            },
            {
               "key": "select_room",
               "template": "Select different room",
               "needs": "rooms"
            },
            {
               "key": "edit_room",
               "template": "Edit selected room",
               "needs": "hasSelectedRoom"
            },
            {
               "key": "delete_room",
               "template": "Delete room",
               "needs": "hasSelectedRoom"
            },
            {
               "key": "BACK",
               "template": "Back"
            }
         ]
      },





      "room_template": {
         "type": "form",
         "header": [
            {
               "template": "Create room"
            }
         ],
         "questions": [
            {
               "key": "direction",
               "template": "Direction from selected room (n, s, e, w, u, d)",
               "type": "input",
               "validate": "validateDirection"
            },
            {
               "key": "room_name",
               "template": "Room name",
               "type": "input",
               "validate": "validateExists"
            },
            {
               "key": "description",
               "template": "Room description",
               "type": "editor"
            },
            {
               "key": "terrain",
               "template": "Invalid terrain.",
               "type": "input",
               "default": "_default",
               "validate": "validateTerrain"
            }
         ]
      },
      "select_room": {
         "type": "choice",
         "header": [
            {
               "template": "Which room would you like to select?"
            }
         ],
         "questions": [
            {
               "key": "${room.id}",
               "template": "${room.id}"
            },
            {
               "key": "BACK",
               "template": "Back to room menu"
            }
         ]
      },
      "delete_area": {
         "type": "confirm",
         "header": [
            {
               "template": "Delete"
            }
         ],
         "message": "Are you sure you want to delete room '${store.roomStore.selected.id}' in area ${store.areaStore.selected.name}'?"
      }
   }
}